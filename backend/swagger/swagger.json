        "x-codeSamples": [
          {
            "lang": "JavaScript",
            "label": "fetch",
            "source": "const token = localStorage.getItem('token');\nconst res = await fetch('/api/todos', {\n  method: 'POST',\n  headers: {\n    'Content-Type': 'application/json',\n    'Authorization': `Bearer ${token}`\n  },\n  body: JSON.stringify({ title: 'Q1 보고서 제출', dueDate: '2026-02-28' })\n});\nconst todo = await res.json();"
          }
